{
  "trailingComma": "es5",
  "tabWidth": 2,
  "insertPragma": false,
  "overrides": [
    {
      "files": "*.js",
      "options": { "semi": true, "tabWidth": 2 }
    },
    {
      "files": "*.json",
      "options": { "tabWidth": 2 }
    },
    {
      "files": "*.jsx",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ".prettierrc",
      "options": { "parser": "json", "tabWidth": 2 }
    }
  ]
}
